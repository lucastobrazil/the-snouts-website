---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Tour Dates" description="See when and where The Snouts are playing live. Upcoming shows and tickets.">

  <!-- Fixed background image docked right, fading to transparent -->
  <div class="fixed inset-y-0 right-0 w-1/2 pointer-events-none z-0 hidden md:block" aria-hidden="true">
    <div
      class="absolute inset-0 bg-cover bg-center"
      style="background-image: url('/images/hero-bg.jpg');"
    ></div>
    <div class="absolute inset-0 bg-gradient-to-r from-brand-dark to-transparent"></div>
    <div class="absolute inset-0 bg-brand-dark/40"></div>
  </div>

  <section class="relative z-10 container mx-auto px-4 py-30">
    <div class="max-w-3xl mx-auto">
      <h1 class="text-4xl font-bold">Tour Dates</h1>
      <p class="mt-4 text-brand-muted">Catch us live</p>

      <div class="mt-10">
        <a
          class="bit-widget-initializer"
          data-artist-name="id_15594099"
          data-auto-style="false"
          data-text-color="#f5f5f5"
          data-link-color="#d4d4d4"
          data-background-color="transparent"
          data-separator-color="#262626"
          data-popup-background-color="#171717"
          data-link-text-color="#f5f5f5"
          data-font="Inter"
          data-display-local-dates="false"
          data-display-past-dates="false"
          data-display-limit="15"
          data-display-start-date="false"
          data-bit-logo-position="bottomRight"
          data-display-play-my-city="true"
          href="https://www.bandsintown.com/a/15594099"
        >
        </a>
        <script is:inline src="https://widget.bandsintown.com/main.min.js"></script>
      </div>

      <p class="mt-8 text-sm text-brand-muted">
        Can't see the listings? Visit our
        <a
          href="https://www.bandsintown.com/a/15594099"
          class="underline hover:text-brand-primary"
          target="_blank"
          rel="noopener noreferrer"
        >
          Bandsintown page
        </a>
        directly.
      </p>
    </div>
  </section>
</BaseLayout>
