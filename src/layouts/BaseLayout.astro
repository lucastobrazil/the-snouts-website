---
import { SEO } from "astro-seo";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

interface Props {
  title: string;
  description: string;
  image?: string;
}

const base = import.meta.env.BASE_URL.replace(/\/$/, "");
const { title, description, image = `${base}/images/og-default.svg` } = Astro.props;
const siteUrl = (Astro.site?.toString() ?? "https://thesnouts.com").replace(/\/$/, "");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href={`${base}/favicon.svg`} />
    <link rel="preload" href="/@fontsource/teko/files/teko-latin-400-normal.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/@fontsource/teko/files/teko-latin-700-normal.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/@fontsource/inter/files/inter-latin-400-normal.woff2" as="font" type="font/woff2" crossorigin />
    <SEO
      title={title}
      titleTemplate="%s | The Snouts"
      titleDefault="The Snouts"
      description={description}
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image: `${siteUrl}${image}`,
          url: siteUrl,
        },
        optional: {
          description: description,
          siteName: "The Snouts",
        },
      }}
      twitter={{
        card: "summary_large_image",
      }}
    />
  </head>
  <body class="min-h-screen flex flex-col">
    <!-- SVG filter for distressed/gritty text -->
    <svg class="absolute w-0 h-0" aria-hidden="true">
      <filter id="grit">
        <!-- Edge warp -->
        <feTurbulence type="fractalNoise" baseFrequency="0.04" numOctaves="4" result="warp" />
        <feDisplacementMap in="SourceGraphic" in2="warp" scale="2" xChannelSelector="R" yChannelSelector="G" result="warped" />
        <!-- Interior grain, masked to text -->
        <feTurbulence type="fractalNoise" baseFrequency="0.35" numOctaves="2" result="grain" />
        <feColorMatrix type="saturate" values="0" in="grain" result="grainBW" />
        <feComponentTransfer in="grainBW" result="grainDark">
          <feFuncR type="linear" slope="0.4" intercept="0" />
          <feFuncG type="linear" slope="0.4" intercept="0" />
          <feFuncB type="linear" slope="0.4" intercept="0" />
        </feComponentTransfer>
        <feBlend in="warped" in2="grainDark" mode="multiply" result="gritty" />
        <feComposite in="gritty" in2="warped" operator="in" />
      </filter>
    </svg>
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
